{
  "tasks": {
    "install": "deno run -R -W -E=HOME,XDG_CONFIG_HOME,XDG_CACHE_HOME,USERPROFILE,AppData,LocalAppData ./src/install.ts",
    "update:daily": "deno run -R -W -E=HOME,XDG_CONFIG_HOME,XDG_CACHE_HOME,USERPROFILE,AppData,LocalAppData --allow-run=git,powershell.exe ./src/update_daily.ts",
    "jdk:install": "deno run -R -W=$HOME/.local/openjdk,/tmp -N=download.java.net -E=HOME,XDG_CONFIG_HOME,XDG_CACHE_HOME,USERPROFILE,AppData,LocalAppData --allow-run=tar ./src/jdk.ts install",
    "jdk:dotenv": "deno run -R=$HOME/.local/openjdk -E=HOME,USERPROFILE ./src/jdk.ts dotenv",
    "sdk:update": "./install_sdk.sh sdk update",
    "basetool:install": "./install_sdk.sh basetool install",
    "basetool:update": "./install_sdk.sh basetool update",
    "gotools:install": "./install_sdk.sh gopkg install",
    "gotools:update": "./install_sdk.sh gopkg update",
    "update:all": {
      "command": "deno task sdk:update && deno task basetool:update && deno task gotools:update"
    }
  },
  "imports": {
    "#/": "./src/"
  }
}
